<div class="w-full h-full mx-auto my-8 p-6 bg-white flex flex-grow justify-between gap-4">
  <!-- Book Image -->
  <div class="w-full h-full p-4 overflow-hidden rounded-md">
    <%= image_tag "bookwheel_logo.png", alt: @book.title, class: "w-full h-full object-cover" %>
  </div>

  <!-- Book Details -->
  <div class="mt-4">
    <!-- Book Title -->
    <h1 class="text-2xl font-semibold text-gray-800"><%= @book.title %></h1>

    <!-- Book Author -->
    <p class="text-lg text-gray-600 mt-2">by <%= @book.author %></p>

    <!-- Book Description -->
    <p class="text-lg text-gray-600 mt-2"> Description: <%= @book.description %></p>

    <!-- Book Age Group -->
    <p class="text-lg text-gray-600 mt-2"> Age Group <%= @book.age_recommendation %></p>

    <!-- Book Price -->
    <p class="text-xl font-bold text-green-700 mt-4">Price: AED <%= @book.price %></p>

    <!-- Action Buttons -->
    <div class="mt-6 flex gap-4">
      <%= link_to 'Edit Book', edit_book_path(@book), class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded" %>
      <%= link_to 'Back to Books', books_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
