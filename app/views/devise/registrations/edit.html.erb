<h2 class="text-2xl font-semibold text-center mb-6">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "max-w-lg mx-auto p-6 bg-blue-50 rounded shadow-md" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full min-w-[18rem] border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>

  <div class="mb-4">
    <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "First Name", class: "mt-1 block w-full min-w-[18rem] border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>

  <div class="mb-4">
    <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "Last Name", class: "mt-1 block w-full min-w-[18rem] border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>

  <div class="mb-4">
    <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "mt-1 block w-full min-w-[18rem] border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="mb-4 text-sm text-gray-600">
      Currently waiting confirmation for: <%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %> 
    <i class="text-xs text-gray-500">(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full min-w-[18rem] border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
    <% if @minimum_password_length %>
      <em class="text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full min-w-[18rem] border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>

  <div class="mb-4">
    <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
    <i class="text-xs text-gray-500">(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full min-w-[18rem] border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>

  <div>
    <%= f.submit "Update", class: "mt-4 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded w-full" %>
  </div>
<% end %>

<h3 class="text-2xl font-semibold text-center mt-8">Cancel My Account</h3>

<div class="text-center text-gray-700 mt-4">
  <p class="mb-4">Unhappy with your experience? Weâ€™re sorry to see you go!</p>
  <%= button_to "Cancel My Account", registration_path(resource_name), 
      data: { confirm: "Are you sure you want to cancel your account? This action cannot be undone.", turbo_confirm: "Are you sure you want to cancel your account?" }, 
      method: :delete, 
      class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded transition duration-200" %>
</div>

<div class="text-center mt-4">
  <%= link_to "Back", :back, class: "text-blue-500 hover:text-blue-600 font-medium" %>
</div>
